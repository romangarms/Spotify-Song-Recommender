# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIPY_CLIENT_ID=your_spotify_client_id_here
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIPY_REDIRECT_URI=http://127.0.0.1:5001/api/admin/callback

# Logic API Token
# Get this from https://logic.inc
LOGIC_API_TOKEN=your_logic_api_token_here

# Admin Secret for Setup
# Choose any secret key for admin access
ADMIN_SECRET=your_admin_secret_here

# Spotify System Account
# Visit /api/admin/spotify-setup?key=YOUR_ADMIN_SECRET to configure
SPOTIFY_SYSTEM_REFRESH_TOKEN=

# Flask Environment
FLASK_ENV=development
PORT=5001
